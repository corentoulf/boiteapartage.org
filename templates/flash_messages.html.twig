<div class="container-fluid d-flex justify-content-end position-absolute">
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="col-auto mt-3 me-1 alert alert-{{ label }} {% if label in ['warning', 'danger'] %}alert-dismissable fade show{% endif %}" role="alert">
            {{ message }}
            {% if label not in ['success'] %}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>{% endif %}
        </div>
    {% endfor %}
{% endfor %}
</div>


