{% extends 'base_auth.html.twig' %}

{# {% block title %}Hello HomeController!{% endblock %} #}

{% block body %}


<div class="container">
    <div class="p-5 my-4 bg-body-tertiary rounded-3 col-md-4 offset-md-4">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="fw-bold mb-3">Mettre à jour les informations</h1>
        {{ form_errors(updateUserInfoForm) }}

        {{ form_start(updateUserInfoForm) }}
            {{ form_row(updateUserInfoForm.email, {
                label: 'Email'
            }) }}

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
            </div>
        {{ form_end(updateUserInfoForm) }}
    </div>
</div>
{% endblock %}
