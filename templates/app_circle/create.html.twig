{% extends 'base_auth.html.twig' %}

{% block title %}Créer une boîte{% endblock %}

{% block body %}
<div class="container">
    <div class="p-2 p-lg-5 my-1 my-lg-4 col-md-6 offset-md-3">
    
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="fw-bold mb-3">Créer une boîte à partage</h1>
        {{ form_errors(form) }}
        {{ form_start(form) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {% block importmap %}
     {{ importmap(['app', 'select']) }}
    {% endblock %}
{% endblock %}