{% extends 'base_auth.html.twig' %}

{% block title %}Recherche Boîtes à partage{% endblock %}

{% block body %}
<div class="container">
    <div class="px-2 py-2 my-4  ">
      <div class="container-fluid py-5">
        <div class="d-flex align-items-center justify-content-between">
            <h1 class="display-5 fw-bold">Rechercher un objet</h1>
        </div>
        {% if items|length == 0 %}
            <div class="mt-4">
                <p class="fs-4" >Il n'y a pas encore d'objet dans cette boîte. <a href="{{path('app_item_create')}}">Ajoutez-en un</a> maintenant.</p>
            </div>
        {% endif %}
        {% if items|length > 0 %}
            <div class="mt-4">
                <div class="col-12 pt-3 pb-2">
                    <input type="text" id="filterItemTableInput" class="form-control" placeholder="Taper pour chercher" aria-label="Rechercher un élément" aria-describedby="externalFilter" value="{{app.request.get('q')}}">
                </div>
                <table class="table table-striped table-hover" id="itemTable">
                    <thead>
                        <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Propriétaire</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}  
                            <tr>
                                <td>{{item.description}}</td>
                                <td>{{item.category}}</td>
                                <td>{{item.owner}}</td>
                            </tr>
                        {% endfor %}
                        
                    </tbody>
                </table>
            </div>
        {% endif %}
      </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {% block importmap %}
     {{ importmap(['app', 'searchItem']) }}
    {% endblock %}
{% endblock %}