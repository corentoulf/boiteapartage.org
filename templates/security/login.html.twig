{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="p-5 my-4 bg-body-tertiary rounded-3 col-md-4 offset-md-4">
    <form class="form" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que <span class="fw-semibold">{{ app.user.userIdentifier }}</span>
            </div>
            <div class="d-grid gap-2">
                <a class="btn btn-primary" href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% else %}

        <h1 class="fw-bold mb-3">Connexion</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" required autofocus>
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control mb-3" autocomplete="current-password" required>
        <input type="hidden" name="_target_path" value="{{ path('app_auth_home') }}">
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvernir de moi
                </label>
            </div>

        <div class="d-grid gap-2">
            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button>
        </div>
        {% endif %}
    </form>
    </div>
</div>
{% endblock %}
