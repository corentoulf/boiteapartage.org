{% extends 'base.html.twig' %}

{# {% block title %}Hello HomeController!{% endblock %} #}

{% block body %}


<div class="container">
    <div class="p-5 my-4 bg-body-tertiary rounded-3 col-md-6 offset-md-3">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {% if app.user %}
            <div class="mb-3">
                Vous êtes déjà connecté en tant que <span class="fw-semibold">{{ app.user.userIdentifier }}</span>
            </div>
            <div class="d-grid gap-2">
                <a class="btn btn-primary" href="{{ path('app_auth_home') }}"><i class="bi bi-box-arrow-up-right me-1"></i>Aller sur l'application</a>
            </div>
        {% else %}
        <h1 class="fw-bold mb-3">Inscription</h1>
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col">
                    {{ form_row(registrationForm.firstName, {
                        label: 'Prénom *'
                    }) }}
                </div>
                <div class="col">
                    {{ form_row(registrationForm.lastName, {
                        label: 'Nom',
                    }) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(registrationForm.email, {
                        label: 'Email *'
                    }) }}
                </div>
                <div class="col">
                    {{ form_row(registrationForm.phone, {
                label: 'Téléphone',
                help: 'Optionnel, il pourra permettre aux autres utilisateurs de vous contacter.'
            }) }}
                </div>
            </div>

            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe *'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Accepter les conditions d\'utilisation'
            }) }}

            <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
        {% endif %}
    </div>
</div>
{% endblock %}
